<div class="form">
    {{ form_start(form) }}
        <div class="form-control">
            {{ form_label(form.date, 'Choisisez vos crénaux :', {
                label_attr: {
                    class: 'label-form'
                }
            }) }}
            {{ form_widget(form.date, {
                attr: {
                class: 'input-form',
                id : 'date'
                }
            }) }}
            {{ form_errors(form.date, {
                attr: {
                class: 'error-form',
                }
            }) }}
        </div>

        <div class="form-control">
            <label for="radio" class="label-form">Choisissez le type d'éspace qui vous convient :</label>
            <select name="espace" id="radio" class='input-form'>
                <option value="box">Box</option>
                <option value="hall">Hall</option>
            </select>
        </div>

        <div class="form-control">
            {{ form_label(form.nb_joueurs, 'Nombre de participants :', {
                label_attr: {
                    class: 'label-form'
                }
            }) }}
            {{ form_widget(form.nb_joueurs, {
                attr: {
                class: 'input-form',
                id: 'nb_joueurs_input'
                }
            }) }}
        </div>

        <div class="form-control">
            <p>Prix : </p>
            <p id="prix"></p>
        </div>

        <button class="butn">{{ button_label|default('Réserver') }}</button>
    {{ form_end(form) }}
</div>
