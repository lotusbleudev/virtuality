<div class="form">
    {{ form_start(form) }}
        <div class="form-control">
            {{ form_label(form.date, 'Choisisez vos crénaux :', {
                label_attr: {
                    class: 'label-form'
                }
            }) }}
            {{ form_widget(form.date, {
                attr: {
                class: 'input-form'
                }
            }) }}
        </div>

        <div class="form-control">
            {{ form_label(form.nb_joueurs, 'Nombre de participants :', {
                label_attr: {
                    class: 'label-form'
                }
            }) }}
            {{ form_widget(form.nb_joueurs, {
                attr: {
                class: 'input-form'
                }
            }) }}
        </div>

        <div class="form-control">
            {{ form_label(form.prix, 'Prix :', {
                label_attr: {
                    class: 'label-form'
                }
            }) }}
            {{ form_widget(form.prix, {
                attr: {
                class: 'input-form'
                }
            }) }}
        </div>

        <button class="butn">{{ button_label|default('Réserver') }}</button>
    {{ form_end(form) }}
</div>
