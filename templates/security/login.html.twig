{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="form">

		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
			<div class="form-control">
				<label for="inputEmail" class="label-form">Adresse Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class='input-form' autocomplete="email" required autofocus>
			</div>
			<div class="form-control">
				<label for="inputPassword" class="label-form">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class='input-form' autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<button class="butn btn-lg btn-primary" type="submit">
				Se connecter
			</button>
		</form>
	</div>

{% endblock %}

