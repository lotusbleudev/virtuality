<div class='form'>
{{ form_start(form) }}
<div class="form-control">
        {{ form_label(form.titre, 'Titre', {
            label_attr: {
                class: 'label-form'
            }
        }) }}
        {{ form_widget(form.titre, {
            attr: {
            class: 'input-form'
            }
        }) }}
    </div>
    <div class="form-control">
        {{ form_label(form.montant, 'Montant', {
            label_attr: {
                class: 'label-form'
            }
        }) }}
        {{ form_widget(form.montant, {
            attr: {
            class: 'input-form'
            }
        }) }}
    </div>
    <button class="butn">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
</div>