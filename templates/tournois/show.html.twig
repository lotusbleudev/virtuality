{% extends 'base.html.twig' %}

{% block title %}Tournois{% endblock %}

{% block body %}
    <h1>Tournois</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournoi.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tournoi.titre }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ tournoi.dateDebut ? tournoi.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournoi.description }}</td>
            </tr>
            <tr>
                <th>Max_player</th>
                <td>{{ tournoi.maxPlayer }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ tournoi.user ? tournoi.user|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ tournoi.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tournois_index') }}">back to list</a>

    <a href="{{ path('tournois_edit', {'id': tournoi.id}) }}">edit</a>

