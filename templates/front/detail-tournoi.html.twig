{% extends 'base.html.twig' %}

{% block title %}
	{{tournoi.titre}}
{% endblock %}

{% block body %}

	<section id="tournoi-detail">

		<div class="vignette">
			<img src="/img/{{tournoi.jeu.imgCover}}" alt="">
			<div>
				<h1>{{tournoi.jeu.titre}}
					-
					{{tournoi.titre}}</h1>
				<p class="dateNmax">Date :
					<span>{{tournoi.dateDebut|date('d/m/Y')}}</span>
					/ Max joueurs :
					<span>{{tournoi.maxPlayer}}</span>
				</p><br>
				<p>{{tournoi.description}}</p>
			</div>
		</div>
		<h3>Liste des participants:</h3>
		<table class="table">
			<thead>
				{% for i in 1..tournoi.maxPlayer %}
					<tr>
						<th>{{i}}</th>
					</tr>
				{% endfor %}
			</thead>
            
			<tbody>
				{% for u in tournoi.Joueurs %}
					<td>{{u.prenom}}</td>
				{% endfor %}
			</tbody>
		</table>
	</section>

