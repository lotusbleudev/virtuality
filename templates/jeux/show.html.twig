{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
    <h1>Jeux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jeux.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ jeux.titre }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ jeux.editeur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ jeux.date ? jeux.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ jeux.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ jeux.description }}</td>
            </tr>
            <tr>
                <th>Img_cover</th>
                <td>{{ jeux.imgCover }}</td>
            </tr>
            <tr>
                <th>Img_gameplay</th>
                <td>{{ jeux.imgGameplay ? jeux.imgGameplay|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('jeux_index') }}">back to list</a>

    <a href="{{ path('jeux_edit', {'id': jeux.id}) }}">edit</a>

    {{ include('jeux/_delete_form.html.twig') }}
{% endblock %}
